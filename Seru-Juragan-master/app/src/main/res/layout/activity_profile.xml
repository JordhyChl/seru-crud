<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite3"
    tools:context=".ui.lainlain.ProfileActivity">

    <include layout="@layout/view_toolbar_primary_logo"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorWhite3">

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="top|center"
                android:background="@drawable/bg_layout_rounded_primary"
                android:orientation="vertical" >
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layoutIdJuragan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:paddingLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDescIdJuragan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="ID Juragan"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/tvIdJuragan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutIdUnilever"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:paddingLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDescIdUnilever"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="ID Unilever"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/tvIdUnilever"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:paddingLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDescNama"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Nama"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/tvNama"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutNomorTlp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:paddingLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDescNomorTlp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Nomor Telepon"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/tvNomorTlp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:paddingLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDescEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Email"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:paddingLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDescAlamat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Alamat"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/tvAlamat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutLatitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:paddingLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDescLatitude"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:layout_gravity="center"
                    android:text="Lokasi Juragan"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorBlack"/>
                <fragment
                    android:id="@+id/map"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1.2"
                    class="com.google.android.gms.maps.SupportMapFragment" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutNamaNegara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:paddingLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDescNamaNegara"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Nama Negara"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/tvNamaNegara"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutNamaProvinsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:paddingLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDescNamaProvinsi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Nama Provinsi"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/tvNamaProvinsi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutNamaDistrik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:paddingLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDescNamaDistrik"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Nama Distrik"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/tvNamaDistrik"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutNamaDesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:paddingLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDescNamaDesa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Nama Desa"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/tvNamaDesa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/emptyPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite1"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/ic_generic_error_shot"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/offlinePage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite1"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="75dp"
            android:src="@drawable/ic_offline"/>
    </LinearLayout>
</LinearLayout>