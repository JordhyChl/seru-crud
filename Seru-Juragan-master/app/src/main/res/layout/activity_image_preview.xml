<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".view.ImagePreviewActivity">

    <LinearLayout
        android:id="@+id/lyFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/margin_10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBackImgPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8_multiply"/>

        <TextView
            android:id="@+id/tvImgPrevTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"
            android:textSize="15sp"
            android:textColor="@color/colorWhite1"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:text="Image Tanda Tangan"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyEmptyResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lyFooter"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgPreview"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/placeholder"
            android:scaleType="fitCenter"/>
    </LinearLayout>

</RelativeLayout>