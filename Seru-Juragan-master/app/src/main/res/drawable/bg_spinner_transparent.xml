<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:left="4dp"
                        android:top="4dp"
                        android:right="4dp"
                        android:bottom="4dp"
                        />

                    <solid android:color="@color/colorTransparent" />
                    <corners android:radius="@dimen/size_view_5dp" />
                    <stroke android:width="1dp" android:color="@color/colorBlack" />
                </shape>
            </item>

            <item>

                <bitmap android:gravity="center|right" android:src="@drawable/icon_expand_dropdown"/>

            </item>

        </layer-list>
    </item>
</selector>